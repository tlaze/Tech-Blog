<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">View and Add Comments</h1>
    </div>
</div>



<div class="container-fluid post">
	<div class="row">
		<div class="col-8 offset-2">
			<div class="card text-center">
                <h4 class="card-header bg-primary">{{comment.title}}</h4>
                <div class="card-body">
                    <p class="card-text">{{comment.description}}</p>
                </div>
			</div>
		</div>
	</div>
</div>




<div class="container-fluid comments">
	<div class="row">
		<div class="col-8 offset-2">
			<div class="card text-center">
                <form id="new-comment-form">
                    <h4 class="card-header bg-dark text-truncate">Add New Comment</h4>
                    <div class="card-body">
                        <input type="hidden" name="post-id" value={{post.id}}/>
                        <label class="form-label" for="comment-body"></label>
                        <textarea id="comment-body" class="form-control" rows="4"></textarea>
                        <button type="submit" id="comment-btn" class="btn btn-dark">Submit</button>
                    </div>
                </form>
			</div>
		</div>
	</div>
</div>


<script src="/js/selectedComment.js"></script>