<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-6">Log In To Post/Comment</h1>
    </div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-8 offset-2 text-center">
			<form role="form" class="login-form">
				<div class="form-group"> 
					<label for="user-login"></label>
					<input type="text" class="form-control" autofocus="autofocus" placeholder="Enter Username" id="user-login"/>
				</div>
				<div class="form-group">
					<label for="password-login"></label>
					<input type="password" class="form-control" placeholder="Enter Password" id="password-login"/>
				</div>
                <button type="submit" class="btn btn-outline-dark" id="loginBtn">Submit</button><br>
				<a href="/signup" class="link-dark" id="signupLink">Click here to Sign Up</a>
			</form>
		</div>
	</div>
</div>

<script src="/js/login.js"></script>