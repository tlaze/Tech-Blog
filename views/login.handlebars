<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-6">Log In To Post/Comment</h1>
    </div>
</div>


<div class="container-fluid">
  <div class="login-card col-12 text-center">
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login"></label>
        <input class="form-input" type="text" autofocus="autofocus" placeholder="Enter Username" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="form-input" type="password" autofocus="autofocus" placeholder="Enter Password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-outline-dark btn-sm" type="submit" id="submitBtn">Login</button><br>
		<a href="/signup" class="link-dark" id="signupLink">Click here to Sign Up</a>
      </div>
    </form>
  </div>

<script src="/public/js/login.js"></script>