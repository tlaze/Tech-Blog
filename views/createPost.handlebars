<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Create a New Post</h1>
    </div>
</div>

{{!-- Displays card to create a new post after clicking on create new post button in dashboard --}}
<div class="container-fluid new-post">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <form class="text-center bg-success">
                    <div class="form-group card-header">
                        <label for="new-post-title">Title</label>
                        <input type="text" class="form-control" id="new-post-title">
                        <label for="new-post-description" class="card-body">Description</label>
                        <textarea class="form-control" id="new-post-description" rows="4"></textarea>
                    </div>
                        <button type="submit" class="btn btn-outline-light post-btn" id="new-post-btn">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/createPost.js"></script>