<div class="container-fluid posts">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="card">
                <h4 class="card-header bg-dark text-truncate">{{title}}</h5>
				<h6 class="card-header bg-dark text-center">Posted by {{user.username}} on {{format_date date_created}} at {{format_time date_created}}</h6>
                <div class="card-body">
                    <p class="card-text">{{description}}</p>
                </div>
			</div>
		</div>
	</div>
</div>